{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist/tools",
		"module": "ESNext",
		"target": "ES2020",
		"esModuleInterop": true,
		"types": ["node"],
		"skipLibCheck": true
	},
	"include": [
		"src/tools/generate-mcp-tools.ts"
	],
	"exclude": [
		"tests",
		"node_modules",
		"**/*.test.ts",
		"**/__mocks__/**",
		"**/babel*",
		"**/jest*"
	]
}