{
	"name": "ingeniux-cms-mcp-server",
	"version": "1.0.0",
	"description": "Production-ready Ingeniux CMS MCP server with OAuth, Roo integration, and modular architecture.",
	"main": "dist/index.js",
	"type": "module",
	"exports": {
		".": "./dist/index.js"
	},
	"bin": {
		"ingeniux-cms-mcp-server": "./dist/index.js"
	},
	"files": [
		"dist",
		"docs",
		"install.sh",
		"install.ps1",
		"Dockerfile",
		".env.example",
		"CHANGELOG.md"
	],
	"scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"dev": "tsx src/index.ts",
		"auth": "tsx auth-cli.ts",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:security": "jest tests/security",
		"test:performance": "jest tests/performance",
		"test:integration": "jest tests/integration",
		"lint": "eslint src/**/*.ts",
		"clean": "rimraf dist",
		"docker:build": "docker build -t ingeniux-cms-mcp-server .",
		"docker:run": "docker run --env-file .env -p 3000:3000 ingeniux-cms-mcp-server",
		"release": "npm run build && npm publish",
		"prepublishOnly": "npm test"
	},
	"keywords": [
		"mcp", "ingeniux", "cms", "oauth", "api", "roo", "model-context-protocol", "integration", "docker", "workflow"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ingeniux/ingeniux-cms-mcp-server.git"
	},
	"homepage": "https://github.com/ingeniux/ingeniux-cms-mcp-server#readme",
	"bugs": {
		"url": "https://github.com/ingeniux/ingeniux-cms-mcp-server/issues"
	},
	"author": "MCP Server Developer",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.0.0",
		"axios": "^1.6.0",
		"dotenv": "^16.3.0",
		"winston": "^3.11.0",
		"zod": "^3.22.0",
		"node-cache": "^5.1.2",
		"crypto": "^1.0.1"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"@types/jest": "^29.0.0",
		"@jest/globals": "^29.0.0",
		"typescript": "^5.0.0",
		"tsx": "^4.0.0",
		"jest": "^29.0.0",
		"ts-jest": "^29.0.0",
		"eslint": "^8.0.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"rimraf": "^5.0.0"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}